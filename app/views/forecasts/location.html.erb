    <!-- Google maps API begin -->
    <style type="text/css">
      html, body, #map-canvas { height: 100%; margin: 30; padding: 0;}
    </style>
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp"></script>
    <script type="text/javascript">
      function initialize() {
        //var myLatlng = new google.maps.LatLng(-25.363882,131.044922);
        var myLatlng = new google.maps.LatLng(<%= @latitude%>, <%= @longitude%>);
        var mapOptions = {
          center: myLatlng,
          zoom: 10
        };

        var map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);

        var marker = new google.maps.Marker({
            position: myLatlng,
            map: map,
            title: 'Hello World!'
        });
      }
        google.maps.event.addDomListener(window, 'load', initialize);
    </script>
    <!-- Google maps API ends -->
  </head>
  <body>
    <div class="container">
      <div style="height: 50px" class="row">
      </div>
      <div style="height: 100px" class="row">
        <h3>Weather forecast for <%= @address_name%></h3>
      </div>
      <div class="row">
        <!--<p>Latitude is: <%= @latitude %></p>
        <p>Longitude is: <%= @longitude %></p>-->
        <div class="col-md-4">
          <ul>
          <li>The current temperature is <%= @temperature %> degrees Celsius.</li>
          <li>The outlook for the next hour is: <%= @hour_outlook %></li>
          <li>The outlook for the next day is: <%= @day_outlook %></li>
          </ul>
        </div>
        <div class="col-md-8">
          <div style="width: 600px ; height: 400px; margin-left: auto; margin-right: auto">
          <div id="map-canvas" style="width: 100%; height: 100%"></div>
          </div>
        </div>
      </div>
      <div class="row">
        <a href="/">Go back</a>
      </div>
    </div>
  </body>
</html>
